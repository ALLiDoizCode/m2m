{
  "name": "m2m",
  "version": "1.0.0",
  "private": true,
  "description": "Multi-node Interledger Connector with BTP Protocol",
  "workspaces": [
    "packages/*",
    "tools/send-packet"
  ],
  "scripts": {
    "build": "npm run build --workspace=packages/shared && npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "test:watch": "npm run test:watch --workspaces --if-present",
    "test:rfc-links": "npm run test:rfc-links --workspace=packages/connector",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,json,md}\"",
    "send-packet": "npm run --workspace=tools/send-packet start",
    "benchmark": "npm run benchmark --workspace=packages/connector",
    "prepare": "husky"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.6",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "eslint": "^8.56.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.2.5",
    "semantic-release": "^24.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=22.11.0",
    "npm": ">=10.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,json,md}": [
      "prettier --write"
    ]
  }
}
